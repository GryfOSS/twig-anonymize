{
    "name": "praetoriantechnology/twig-anonymize",
    "description": "Basic anonymize filter which leaves first and last letter and replaces rest with asterisks.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GryfOSS\\Twig\\Extension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GryfOSS\\Twig\\Extension\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Bartosz",
            "email": "bartosz@praetorian.technology"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0|^11.0",
        "behat/behat": "^3.13",
        "twig/twig": "^3.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "behat": "behat",
        "test-all": ["@test", "@behat"]
    }
}
